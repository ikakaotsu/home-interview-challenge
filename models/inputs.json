{
  "login": {
    "title": "Welcome back",
    "inputs": [
      {
        "type": "text",
        "name": "username",
        "label": "Username",
        "regex": "^[A-Za-zÑñÁáÉéÍíÓóÚúÜüs]+$",
        "required": true
      },
      {
        "type": "password",
        "name": "password",
        "label": "Password",
        "regex": "^(?=.*[A-Za-z])(?=.*d)[A-Za-zd]{8,}$",
        "required": true
      },
      {
        "type": "checkbox",
        "name": "remember",
        "label": "Remember me"
      },
      {
        "type": "button",
        "label": "Login",
        "method": "login"
      },
      {
        "type": "link",
        "to": "https://digiventures.la/",
        "label": "¿Any problem? Contact us"
      }
    ]
  },
  "register": {
    "title": "Welcome",
    "inputs": [
      {
        "type": "text",
        "name": "fullname",
        "label": "Your full name",
        "regex": "^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$"
      },

      {
        "type": "email",
        "name": "email",
        "label": "Email",
        "regex": "^[a-z0-9]+(.[_a-z0-9]+)*@[a-z0-9-]+(.[a-z0-9-]+)*(.[a-z]{2,15})$"
      },
      {
        "type": "text",
        "name": "username",
        "label": "Username",
        "regex": "^[A-Za-zÑñÁáÉéÍíÓóÚúÜüs]+$"
      },
      {
        "type": "password",
        "name": "password",
        "label": "Password",
        "regex": "^(?=.*[A-Za-z])(?=.*d)[A-Za-zd]{8,}$"
      },
      {
        "type": "password",
        "name": "confirm_password",
        "label": "Confirm your password",
        "regex": "^(?=.*[A-Za-z])(?=.*d)[A-Za-zd]{8,}$",
        "conditions": {
          "validations": [{ "comparision": "same", "input": "password" }]
        }
      },
      {
        "type": "select",
        "name": "country",
        "label": "¿Where are you living?",
        "options": [
          { "value": "argentina", "label": "Argentina" },
          { "value": "other", "label": "Other" }
        ]
      },
      {
        "type": "text",
        "name": "custom_country",
        "label": "Specify which country",
        "conditions": {
          "validations": [
            {
              "comparision": "not_includes",
              "input": "country",
              "values": ["argentina"]
            }
          ],
          "render": [
            [
              {
                "comparision": "includes",
                "input": "country",
                "values": ["other"]
              }
            ]
          ]
        }
      },
      {
        "type": "button",
        "label": "Create account",
        "method": "register"
      },
      {
        "type": "link",
        "to": "https://digiventures.la/",
        "target": "_newblank",
        "label": "¿Any problem? Contact us"
      }
    ]
  },
  "contact": {
    "title": "Contact us!",
    "inputs": [
      {
        "type": "text",
        "name": "username",
        "label": "Your Name",
        "regex": "^[A-Za-zÑñÁáÉéÍíÓóÚúÜüs]+$",
        "required": true
      },
      {
        "type": "email",
        "name": "email",
        "label": "Email",
        "regex": "^[w-.]+@([w-]+.)+[w-]{2,4}$"
      },
      {
        "type": "tel",
        "name": "tel",
        "label": "Phone Number",
        "regex": "[0-9]{3}-[0-9]{2}-[0-9]{3}"
      },
      {
        "type": "button",
        "label": "Send Email",
        "method": "contact"
      },
      {
        "type": "link",
        "to": "https://digiventures.la/",
        "target": "_newblank",
        "label": "¿Any problem? Contact us"
      }
    ]
  }
}
